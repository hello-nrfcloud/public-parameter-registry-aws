{
  "name": "@nordicsemiconductor/public-parameter-registry",
  "version": "0.0.0-development",
  "description": "Public parameter registry developed using AWS CDK in TypeScript",
  "type": "module",
  "scripts": {
    "test": "jest --passWithNoTests",
    "test:e2e": "$(set -o pipefail && npx tsx ./feature-runner/run-features.ts | npx tsx ./feature-runner/console-reporter.ts)",
    "prepare": "husky install && check-node-version --package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bifravst/public-parameter-registry-aws-js.git"
  },
  "bugs": {
    "url": "https://github.com/bifravst/public-parameter-registry-aws-js/issues"
  },
  "homepage": "https://github.com/bifravst/public-parameter-registry-aws-js#readme",
  "keywords": [
    "nordicsemiconductor",
    "cellular-iot",
    "aws",
    "cdk"
  ],
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "@aws-sdk/client-cloudfront": "3.421.0",
    "@aws-sdk/client-iam": "3.421.0",
    "@aws-sdk/client-s3": "3.421.0",
    "@aws-sdk/client-ssm": "3.421.0",
    "@nordicsemiconductor/asset-tracker-cloud-code-style": "12.0.92",
    "@nordicsemiconductor/bdd-markdown": "3.6.25",
    "@nordicsemiconductor/cloudformation-helpers": "8.0.0",
    "@nordicsemiconductor/eslint-config-asset-tracker-cloud-typescript": "15.1.0",
    "@swc/cli": "0.1.62",
    "@swc/core": "1.3.90",
    "@swc/jest": "0.2.29",
    "@types/aws-lambda": "8.10.122",
    "@types/glob": "8.1.0",
    "@types/jest": "29.5.5",
    "@types/yazl": "2.4.3",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "aws-cdk": "2.99.0",
    "aws-cdk-lib": "2.99.0",
    "cdk": "2.99.0",
    "chalk": "5.3.0",
    "check-node-version": "4.2.1",
    "constructs": "10.2.70",
    "eslint-plugin-unicorn": "48.0.1",
    "glob": "10.3.10",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "prettier": "3.0.3",
    "tsmatchers": "4.0.12",
    "tsx": "3.12.10",
    "typescript": "5.2.2",
    "yazl": "2.5.1"
  },
  "lint-staged": {
    "*.{md,json,yaml,yml}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --ext .js,.ts"
    ]
  },
  "engines": {
    "node": ">=18",
    "npm": ">=9"
  },
  "volta": {
    "node": "18.18.0"
  },
  "release": {
    "branches": [
      "saga"
    ],
    "remoteTags": true,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/github",
        {
          "successComment": false,
          "failTitle": false
        }
      ]
    ]
  },
  "prettier": "@nordicsemiconductor/asset-tracker-cloud-code-style/.prettierrc",
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "@swc/jest"
      ]
    },
    "testRegex": ".+\\.spec\\.ts$",
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  }
}
